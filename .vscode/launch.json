    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Dashboard",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/pi_home_security/pi_ui/main.py",
            "console": "integratedTerminal",
            "env": {                
                "ENVRIONMENT": "dev",
                "DEBUG_MODE": "True",
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src:",
                "RUN_INTEGRATION_TESTS": "True",                
                
            },
        }
    ]
}